{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode-blocker-diverter",
  "version": "0.1.0",
  "description": "OpenCode plugin for autonomous overnight sessions â€” intercept blockers, continue work, review in the morning",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun build index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "plugin",
    "autonomous",
    "blocker",
    "overnight",
    "session-management"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nikro/opencode-blocker-diverter.git"
  },
  "bugs": {
    "url": "https://github.com/Nikro/opencode-blocker-diverter/issues"
  },
  "homepage": "https://github.com/Nikro/opencode-blocker-diverter#readme",
  "author": "Nikro",
  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.63",
    "@types/bun": "^1.1.15",
    "bun-types": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
